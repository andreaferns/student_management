        android:text="Email"
        android:textSize="20dp" />



    <TextView
        android:id="@+id/profileroll"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
